{% extends 'base.html.twig' %}

{% block title %}
    {{ 'category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'category_list'|trans }}</h1>
	   {% if is_granted("ROLE_ADMIN") %}
           <a href="{{ path('record_create') }}" class="btn btn-primary">{{ 'title.record_create'|trans }}</a>
	   {% else %}
           <a href="{{ path('task_create') }}" class="btn btn-primary">{{ 'title.record_create'|trans }}</a>
	   {% endif %}<br></br>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <table class="table table-striped">
        <thead>
            <tr>
    		<th>{{ 'label.id'|trans }}</th>
    		<th>{{ 'label.title'|trans }}</th>
    		<th>{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for category in pagination %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td><a href="{{ path('category_show', {'id': category.id}) }}">{{ 'action.show'|trans }}</a>
		    <a href="{{ path('category_delete', {'id': category.id}) }}">{{ 'action.delete'|trans }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}
{% endblock %}
