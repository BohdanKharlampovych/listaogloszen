{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit'|trans({'%id%': record.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'edit'|trans({'%id%': record.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('record_edit', {id: record.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-outline-success" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('record_index', {'id': record.id}) }}" class="btn btn-outline-secondary">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}