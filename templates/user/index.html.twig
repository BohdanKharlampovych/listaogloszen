{% extends 'base.html.twig' %}

{% block title %}
    {{ 'users_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'user_index'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <table id="table" class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'email'|trans }}</th>
                <th>{{ 'edit'|trans }}</th>
                <th>{{ 'edit'|trans }}</th>

            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr class="table-light">
                    <td >{{ user.email }}</td>
                    <td><a class="btn btn-outline-secondary" href="{{ url('edit_email', {'id': user.id}) }}">{{'edit_email'|trans}}</a></td>
                    <td><a class="btn btn-outline-secondary" href="{{ url('edit_password', {'id': user.id}) }}">{{'edit_password'|trans}}</a></td>
                </tr>
            {% endfor %}


            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center text-dark">

                {{ knp_pagination_render(pagination) }}

            </ul>
        </nav>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock  %}